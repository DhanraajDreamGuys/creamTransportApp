<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/table_border_filled_color"
        android:padding="@dimen/_10sdp"
        android:text="@string/comments"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@drawable/table_border_line"
        android:padding="@dimen/_10sdp"
        android:text="@string/comments"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/offical_use"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/edittext_background_rectangle_gray"
        android:gravity="top"
        android:hint="@string/offical_use"
        android:lines="5"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp" />


</LinearLayout>